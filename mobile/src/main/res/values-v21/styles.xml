        <item name="timerButtonTextColor">@color/nightModeLightRed</item>
        <item name="timerProgressBarStyle">@style/TimerProgressBarStyle.NightMode</item>
        <item name="resultTextSmall">@style/ResultTextSmall.NightMode</item>
        <item name="resultTextNormal">@style/ResultTextNormal.NightMode</item>
        <item name="resultTextBulbLength">@style/ResultTextBulbLength.NightMode</item>
