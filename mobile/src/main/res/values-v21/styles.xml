    <style name="ResultTextSmall.NightMode" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">@dimen/result_small_fontsize</item>
    </style>
    <style name="ResultTextNormal.NightMode" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textSize">@dimen/result_large_fontsize</item>
    </style>

