        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:listDividerAlertDialog">@drawable/list_divider_night_mode</item>
    </style>

    <style name="TimerProgressBarStyle" parent="android:Widget.Material.ProgressBar.Horizontal" />
    <style name="TimerProgressBarStyle.Light" parent="android:Widget.Material.Light.ProgressBar.Horizontal" />
