        <item name="colorListItemActivated">?android:attr/textColorPrimary</item>
        <item name="actionBarIconTint">?android:attr/iconTint</item>
        <item name="handleIconTint">?android:attr/colorForeground</item>
        <item name="timerButtonStart">@color/buttonStartGreen</item>
        <item name="timerButtonStop">@color/buttonStartRed</item>
        <item name="timerButtonTextColor">@android:color/white</item>
        <item name="timerProgressBarStyle">@style/TimerProgressBarStyle</item>
        <item name="resultTextSmall">@style/ResultTextSmall</item>
        <item name="resultTextNormal">@style/ResultTextNormal</item>
        <item name="resultTextBulbLength">@style/ResultTextBulbLength</item>
        <item name="resultTextMaxExceeded">@style/ResultTextMaxExceeded</item>
    </style>

    <style name="AppThemeLight" parent="android:Theme.Material.Light">
        <item name="listActivatedBackgroundIndicator">?android:attr/activatedBackgroundIndicator</item>
        <item name="colorListItemActivated">?android:attr/colorAccent</item>
        <item name="actionBarIconTint">?android:attr/iconTint</item>
        <item name="handleIconTint">?android:attr/colorForeground</item>
        <item name="timerButtonStart">@color/buttonStartGreen.Light</item>
        <item name="timerButtonStop">@color/buttonStartRed.Light</item>
        <item name="timerButtonTextColor">@android:color/black</item>
        <item name="timerProgressBarStyle">@style/TimerProgressBarStyle.Light</item>
        <item name="resultTextSmall">@style/ResultTextSmall</item>
        <item name="resultTextNormal">@style/ResultTextNormal</item>
        <item name="resultTextBulbLength">@style/ResultTextBulbLength</item>
        <item name="resultTextMaxExceeded">@style/ResultTextMaxExceeded.Light</item>
    </style>

    <style name="AppThemeNightMode" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/nightModeDarkRed</item>
        <item name="android:textColor">@color/nightModeLightRed</item>
        <item name="android:textColorPrimary">@color/nightModeRed</item>
        <item name="android:textColorPrimaryDisableOnly">@color/nightModeRed</item>
        <item name="android:textColorPrimaryNoDisable">@color/nightModeRed</item>
