        <item name="android:textColorSecondaryNoDisable">@color/nightModeRed</item>
        <item name="android:textColorTertiary">@color/nightModeLightRed</item>
        <item name="android:textColorHighlight">@color/nightModeLightRed</item>
        <item name="android:textColorHint">@color/nightModeLightRed</item>
        <item name="android:actionMenuTextColor">@color/nightModeLightRed</item>
        <item name="android:colorPressedHighlight">@color/nightModeDarkRed</item>
        <item name="android:colorLongPressedHighlight">@color/nightModeDarkRed</item>
        <item name="android:colorForeground">@color/nightModeRed</item>
        <item name="android:colorBackground">@color/nightModeBlack</item>
        <item name="android:windowBackground">@color/nightModeBlack</item>
        <item name="android:actionBarItemBackground">@color/nightModeBlack</item>
        <item name="android:popupBackground">@color/nightModeBlack</item>
        <item name="android:actionBarStyle">@android:style/Widget.Material.ActionBar</item>
        <item name="android:alertDialogStyle">@style/AlertDialogThemeNightMode</item>
        <item name="android:navigationBarColor">@color/nightModeBlack</item>
        <item name="android:panelBackground">@color/nightModeDarkRed</item>
        <item name="android:panelColorBackground">@color/nightModeDarkRed</item>
        <item name="android:panelFullBackground">@color/nightModeDarkRed</item>
        <item name="android:panelColorForeground">@color/nightModeLightRed</item>
        <item name="android:textColorAlertDialogListItem">@color/nightModeRed</item>
        <item name="android:colorAccent">@color/nightModeLightRed</item>
        <item name="android:colorButtonNormal">@color/nightModeDarkRed</item>
        <item name="android:colorControlActivated">@color/nightModeLightRed</item>
        <item name="android:alertDialogTheme">@style/AlertDialogThemeNightMode</item>
        <item name="android:windowTitleStyle">@style/WindowTitleStyleNightMode</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleStyleNightMode</item>
        <item name="android:windowFullscreen">true</item>
        <item name="listActivatedBackgroundIndicator">@drawable/list_activated_background_night_mode</item>
        <item name="colorListItemActivated">@color/nightModeDarkRed</item>
        <item name="actionBarIconTint">@color/nightModeLightRed</item>
        <item name="handleIconTint">@color/nightModeRed</item>
        <item name="timerButtonStart">@color/nightModeDarkGreen</item>
