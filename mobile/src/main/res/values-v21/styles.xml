        <item name="android:textColorHint">@color/nightModeLightRed</item>
        <item name="android:actionMenuTextColor">@color/nightModeLightRed</item>
        <item name="android:colorPressedHighlight">@color/nightModeDarkRed</item>
        <item name="android:colorLongPressedHighlight">@color/nightModeDarkRed</item>
        <item name="android:colorForeground">@color/nightModeRed</item>
        <item name="android:colorBackground">@color/nightModeBlack</item>
        <item name="android:windowBackground">@color/nightModeBlack</item>
        <item name="android:actionBarItemBackground">@color/nightModeBlack</item>
