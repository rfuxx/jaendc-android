<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/listActivatedBackgroundIndicator"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    >
    <ImageView
        android:background="?attr/listActivatedBackgroundIndicator"
        android:id="@+id/list_item_drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drag_handle_tinted"
        android:tint="?attr/handleIconTint"
        android:contentDescription="@string/list_drag"
        android:visibility="gone" />
    <TextView
        style="?android:attr/textAppearanceLarge"
        android:id="@+id/list_item_filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_item_drag_handle"
        android:layout_toEndOf="@id/list_item_drag_handle"
        android:background="@android:color/transparent"
        />
    <TextView
        style="?android:attr/textAppearanceSmall"
        android:id="@+id/list_item_filter_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_filter_name"
        android:layout_toRightOf="@id/list_item_drag_handle"
        android:layout_toEndOf="@id/list_item_drag_handle"
        android:background="@android:color/transparent"
        />
</RelativeLayout>
